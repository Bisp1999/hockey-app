# Testing Environment Configuration
# This file contains test-specific settings

# Flask Configuration
FLASK_ENV=testing
FLASK_DEBUG=False
SECRET_KEY=test-secret-key-for-testing-only

# Database Configuration (In-memory SQLite for fast tests)
DATABASE_URL=sqlite:///:memory:
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hockey_test
DB_USER=hockey_test
DB_PASSWORD=hockey_test

# Redis Configuration (disabled for testing)
REDIS_URL=

# Email Configuration (disabled for testing)
MAIL_SERVER=
MAIL_PORT=587
MAIL_USE_TLS=False
MAIL_USE_SSL=False
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=test@hockey-test.local

# Multi-tenant Configuration
TENANT_URL_SUBDOMAIN_ENABLED=True
TENANT_URL_PATH_ENABLED=False

# File Upload Configuration
UPLOAD_FOLDER=test_uploads
MAX_CONTENT_LENGTH=1048576  # 1MB for testing

# Internationalization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,fr

# API Configuration
API_BASE_URL=http://localhost:5000/api
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=WARNING
LOG_FILE=

# Security (testing configuration)
WTF_CSRF_ENABLED=False
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Testing specific
SQLALCHEMY_ECHO=False
TESTING=True
PRESERVE_CONTEXT_ON_EXCEPTION=False
