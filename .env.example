# Environment variables template
# Copy this file to .env and update with your actual values

# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development
FLASK_APP=app.py

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/hockey_pickup_dev
DEV_DATABASE_URL=postgresql://username:password@localhost/hockey_pickup_dev
TEST_DATABASE_URL=postgresql://username:password@localhost/hockey_pickup_test

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@hockeypickup.com

# Multi-tenant Configuration
TENANT_URL_SUBDOMAIN_ENABLED=false
TENANT_URL_PATH_ENABLED=true

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216
