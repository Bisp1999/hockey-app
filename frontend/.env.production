# Frontend Production Environment Configuration

# API Configuration
REACT_APP_API_BASE_URL=https://api.yourdomain.com/api
REACT_APP_BACKEND_URL=https://api.yourdomain.com

# Application Configuration
REACT_APP_APP_NAME=Hockey Pickup Manager
REACT_APP_VERSION=1.0.0

# Multi-tenant Configuration
REACT_APP_TENANT_SUBDOMAIN_ENABLED=true
REACT_APP_TENANT_PATH_ENABLED=false

# Internationalization
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_SUPPORTED_LANGUAGES=en,fr

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=16777216
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# Production Configuration
GENERATE_SOURCEMAP=false
REACT_APP_DEBUG=false

# Build Configuration
BUILD_PATH=build
PUBLIC_URL=/
